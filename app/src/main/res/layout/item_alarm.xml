<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginVertical="5dp"
    android:id="@+id/item_main"
    android:background="@drawable/item_list_on"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_alarm_list_am"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="오전"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/tv_alarm_list_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="00:00"
        android:textSize="35sp"
        android:textColor="@color/black"
        android:layout_marginStart="5dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/tv_alarm_list_am"
        app:layout_constraintBottom_toBottomOf="@id/tv_alarm_list_am"/>

    <ImageButton
        android:id="@+id/iv_alarm_list_more"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/icon_more"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toTopOf="@id/tv_alarm_list_time"
        app:layout_constraintBottom_toBottomOf="@id/tv_alarm_list_time"/>

    <CheckBox
        android:id="@+id/sw_alarm_list_check"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintEnd_toStartOf="@id/iv_alarm_list_more"
        app:layout_constraintTop_toTopOf="@id/iv_alarm_list_more"
        app:layout_constraintBottom_toBottomOf="@id/iv_alarm_list_more"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/tv_alarm_list_am"
        tools:text="일 월 화 수 목 금 토"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_alarm_list_am"
        app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>